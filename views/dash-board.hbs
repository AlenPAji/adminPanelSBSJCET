<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Event List</title>

    <!-- Include Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
  </head>
  <body>

        <div class="container-fluid">
        <div class="row">
            <div class="col-6">
                <!-- Add Event Button -->
                <a href="/admin/admin-dashboard/add-event" class="btn btn-primary mt-2 ml-2">Add Event</a>
            </div>
            <div class="col-6 text-right">
                <!-- Log Out Button -->
                <a href="/admin/admin-dashboard/log-out" class="btn btn-danger mt-2 mr-2">Log Out</a>
            </div>
        </div>
    </div>
    <h1 class="text-center">List of Events</h1>
    <div class="container mt-4">
      <div class="row">
        <!-- Loop through your data and generate cards -->
        {{#each responce}}
          <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
            <div class="card h-100">
              <!-- Product Image -->
              <img
                src="/event-posters/{{this.img.imageName}}"
                class="card-img-top product-image"
                style="max-height: 250px; object-fit: contain;"
                alt="Product Image"
              />
              <div class="card-body">
                <!-- Event Name -->
                <h5 class="card-title">{{this.eventName}}</h5>
                <!-- Event Description -->
                <p class="card-text">{{this.eventDescription}}</p>
                <!-- Event Chapter -->
                <p class="card-text"><strong>Chapter:</strong>
                  {{this.societyName}}</p>
                <!-- Event Date -->
                <p class="card-text"><strong>Date:</strong>
                  {{this.eventDate}}</p>
                <!-- Mode of Event -->
                <p class="card-text"><strong>Mode:</strong>
                  {{this.eventType}}</p>
                <!-- Venue -->
                
                <!-- Event Time -->
                {{#isEqual this.eventType "offline"}}
                  <p class="card-text"><strong>Venue:</strong> {{this.venue}}</p>
                {{else}}
                
                  <!-- Content to show when eventType is not 'offline' -->
                {{/isEqual}}
                <p class="card-text"><strong>Time:</strong>
                  {{this.eventTime}}</p>
                <div class="text-center">
                  <a
                    href="/admin/admin-dashboard/update/{{this._id}}"
                    class="btn btn-primary"
                  >Edit</a>
                  <a
                    href="/admin/admin-dashboard/delete/{{this._id}}"
                    class="btn btn-danger" onclick="return confirm('Are you sure that you want to delete {{this.name}} ?')"
                  >Delete</a>
                </div>
                
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>

    <!-- Include Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"
    ></script>
    <script
      src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
    ></script>
  </body>
</html>